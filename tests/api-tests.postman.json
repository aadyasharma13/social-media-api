                  "const timestamp = Date.now();",
                  "pm.variables.set('testUsername', 'testuser' + timestamp);",
                  "pm.variables.set('testEmail', 'testuser' + timestamp + '@example.com');"
                ],
                "type": "text/javascript"
              }
