{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "build",
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types-override"
    ]
  },
  "include": ["src/**/*"]
}
